<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="GardenLawn\Company\Api\Data\GridInterface" type="GardenLawn\Company\Model\Grid"/>
    <virtualType name="GardenLawn\Company\Model\ResourceModel\Grid\Grid\Collection"
                 type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">gardenlawn_company</argument>
            <argument name="resourceModel" xsi:type="string">GardenLawn\Company\Model\ResourceModel\Grid</argument>
        </arguments>
    </virtualType>
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="company_record_grid_list_data_source" xsi:type="string">
                    GardenLawn\Company\Model\ResourceModel\Grid\Grid\Collection
                </item>
            </argument>
        </arguments>
    </type>
    <preference for="GardenLawn\Company\Api\Data\CompanyCommentInterface" type="GardenLawn\Company\Model\CompanyComment"/>
    <virtualType name="GardenLawn\Company\Model\ResourceModel\CompanyComment\CompanyComment\Collection"
                 type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">gardenlawn_company_comment</argument>
            <argument name="resourceModel" xsi:type="string">GardenLawn\Company\Model\ResourceModel\CompanyComment</argument>
        </arguments>
    </virtualType>
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="company_record_comment_list_data_source" xsi:type="string">
                    GardenLawn\Company\Model\ResourceModel\CompanyComment\CompanyComment\Collection
                </item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Framework\Console\CommandList">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="import_dealers" xsi:type="object">GardenLawn\Company\Console\Command\ImportDealers</item>
            </argument>
        </arguments>
    </type>

    <!-- Santander B2B Restriction -->
    <type name="Aurora\Santander\ViewModel\Rates">
        <plugin name="gardenlawn_company_santander_rates_view_model_plugin"
                type="GardenLawn\Company\Plugin\Payment\SantanderRatesViewModelPlugin" sortOrder="10"/>
    </type>
    <type name="Aurora\Santander\ViewModel\Installment">
        <plugin name="gardenlawn_company_santander_installment_view_model_plugin"
                type="GardenLawn\Company\Plugin\Payment\SantanderInstallmentViewModelPlugin" sortOrder="10"/>
    </type>
</config>
