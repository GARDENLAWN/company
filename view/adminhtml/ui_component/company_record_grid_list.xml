<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:framework:Ui/etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="config" xsi:type="array">
            <item name="update_url" xsi:type="url" path="mui/index/render"/>
            <item name="filter_url_params" xsi:type="array">
                <item name="status" xsi:type="string">*</item>
            </item>
        </item>
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">company_record_grid_list.company_record_grid_list_data_source</item>
            <item name="deps" xsi:type="string">company_record_grid_list.company_record_grid_list_data_source</item>
        </item>
        <item name="spinner" xsi:type="string">grid_records_columns</item>
        <item name="buttons" xsi:type="array">
            <item name="add" xsi:type="array">
                <item name="name" xsi:type="string">add</item>
                <item name="label" xsi:type="string" translate="true">Add New Row</item>
                <item name="class" xsi:type="string">primary</item>
                <item name="url" xsi:type="string">*/*/addrow</item>
            </item>
        </item>
    </argument>
    <dataSource name="company_record_grid_list_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">
                Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider
            </argument>
            <argument name="name" xsi:type="string">company_record_grid_list_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">company_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/provider</item>
                    <item name="update_url" path="mui/index/render" xsi:type="url"/>
                    <item name="storageConfig" xsi:type="array">
                        <item name="indexField" xsi:type="string">company_id</item>
                    </item>
                </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/grid/provider</item>
            </item>
        </argument>
    </dataSource>
    <listingToolbar name="listing_top">
        <filters component="GardenLawn_Company/js/grid/columns/filters"  />
    </listingToolbar>
    <container name="listing_top">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="template" xsi:type="string">ui/grid/toolbar</item>
                <item name="stickyTmpl" xsi:type="string">ui/grid/sticky/toolbar</item>
            </item>
        </argument>
        <filters name="listing_filters"/>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <massaction name="listing_massaction">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="selectProvider" xsi:type="string">
                        company_record_grid_list.company_record_grid_list.grid_records_columns.ids
                    </item>
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/tree-massactions</item>
                    <item name="indexField" xsi:type="string">company_id</item>
                </item>
            </argument>
            <!-- Mass actions which you want to add in your grid-->
            <action name="delete">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="type" xsi:type="string">delete</item>
                        <item name="label" xsi:type="string" translate="true">Delete</item>
                        <item name="url" xsi:type="url" path="company/grid/MassDelete"/>
                        <item name="confirm" xsi:type="array">
                            <item name="title" xsi:type="string" translate="true">Delete</item>
                            <item name="message" xsi:type="string" translate="true">Do you want to delete selected row
                                record?
                            </item>
                        </item>
                    </item>
                </argument>
            </action>
        </massaction>
        <paging name="listing_paging">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="storageConfig" xsi:type="array">
                        <item name="provider" xsi:type="string">
                            company_record_grid_list.company_record_grid_list.listing_top.bookmarks
                        </item>
                        <item name="namespace" xsi:type="string">current.paging</item>
                    </item>
                    <item name="selectProvider" xsi:type="string">
                        company_record_grid_list.company_record_grid_list.grid_records_columns.ids
                    </item>
                </item>
            </argument>
        </paging>
    </container>
    <columns name="grid_records_columns">
        <settings>
        </settings>
        <selectionsColumn name="ids">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="indexField" xsi:type="string">company_id</item>
                    <item name="sorting" xsi:type="string">desc</item>
                    <item name="sortOrder" xsi:type="number">0</item>
                </item>
            </argument>
        </selectionsColumn>
        <column name="company_id">
            <settings>
                <filter>number</filter>
                <dataType>number</dataType>
                <label translate="true">Company ID</label>
            </settings>
        </column>
        <column name="created_at">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Created at</label>
            </settings>
        </column>
        <column name="updated_at">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Updated at</label>
            </settings>
        </column>
        <column name="nip">
            <settings>
                <filter>text</filter>
                <dataType>text</dataType>
                <label translate="true">NIP</label>
            </settings>
        </column>
        <column name="name">
            <settings>
                <filter>text</filter>
                <dataType>text</dataType>
                <label translate="true">Name</label>
            </settings>
        </column>
        <column name="ceidg_email">
            <settings>
                <filter>text</filter>
                <dataType>text</dataType>
                <label translate="true">CEIDG Email</label>
            </settings>
        </column>
        <column name="ceidg_phone">
            <settings>
                <filter>text</filter>
                <dataType>text</dataType>
                <label translate="true">CEIDG Phone</label>
            </settings>
        </column>
        <column name="email">
            <settings>
                <filter>text</filter>
                <dataType>text</dataType>
                <label translate="true">Email</label>
            </settings>
        </column>
        <column name="phone">
            <settings>
                <filter>text</filter>
                <dataType>text</dataType>
                <label translate="true">Phone</label>
            </settings>
        </column>
        <column name="www">
            <settings>
                <filter>text</filter>
                <dataType>text</dataType>
                <label translate="true">Www</label>
            </settings>
        </column>
        <column name="url">
            <settings>
                <filter>text</filter>
                <dataType>text</dataType>
                <label translate="true">Url</label>
            </settings>
        </column>
        <column name="address">
            <settings>
                <filter>text</filter>
                <dataType>text</dataType>
                <label translate="true">Address</label>
            </settings>
        </column>
        <column name="distance">
            <settings>
                <filter>float</filter>
                <dataType>text</dataType>
                <label translate="true">Distance</label>
            </settings>
        </column>
        <column name="status" component="Magento_Ui/js/grid/columns/select">
            <settings>
                <options class="GardenLawn\Company\Model\Config\Source\Status"/>
                <filter>select</filter>
                <dataType>select</dataType>
                <label translate="true">Status</label>
            </settings>
        </column>
        <column name="customer_group_id" component="Magento_Ui/js/grid/columns/select">
            <settings>
                <options class="Magento\Customer\Model\Customer\Source\Group"/>
                <filter>select</filter>
                <dataType>select</dataType>
                <label translate="true">Group</label>
            </settings>
        </column>
        <column name="customer_id">
            <settings>
                <filter>select</filter>
                <dataType>select</dataType>
                <label translate="true">Customer</label>
            </settings>
        </column>
        <actionsColumn name="actions" class="GardenLawn\Company\Ui\Component\Listing\Grid\Column\Action">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="resizeEnabled" xsi:type="boolean">false</item>
                    <item name="resizeDefaultWidth" xsi:type="string">107</item>
                    <item name="indexField" xsi:type="string">company_id</item>
                </item>
            </argument>
        </actionsColumn>
    </columns>
</listing>
